{
  "name": "mern-todo-app",
  "version": "1.0.0",
  "description": "MERN stack TO-DO App",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "client:storybook": "npm run storybook --prefix client",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "jest --coverage",
    "test:server": "npm test ./__tests__/",
    "test:verbose": "jest --verbose",
    "test:users": "npm test ./__tests__/users-controller.js",
    "test:preferences": "jest ./__tests__/preferences-controller.js",
    "test:auth": "npm test ./__tests__/auth-controller.js",
    "test:tasks": "npm test ./__tests__/tasks-controller.js"
  },
  "keywords": [
    "MERN",
    "React",
    "MongoDB",
    "Node.js",
    "Express.js"
  ],
  "author": "M. Dziadkowiec",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.2.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.3",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.0.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.3"
  }
}
